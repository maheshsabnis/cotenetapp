@model cotenetapp.Models.CategoryProduct

    <h1>Master Details</h1>

    <h2>List of Categories</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                   CategoryRowId
                </th>
                <th>
                    CategoryId
                </th>
                <th>
                   CategoryName
                </th>
                <th>
                    BasePrice
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryRowId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BasePrice)
                    </td>
                    <td>
                        @Html.ActionLink("ShowDetails", "Edit", new { id = item.CategoryRowId }) |
                    </td>
                </tr>
            }
        </tbody>
    </table> 